
<div class="container">
 <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">

        <h3>Create a new booking </h3>

        <%= simple_form_for @booking do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <%= f.input :lambo_id %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
